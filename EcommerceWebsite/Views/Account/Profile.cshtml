@model Ecommerce.Core.DTOs.Identity.UserDto

@{
    ViewData["Title"] = "Thông tin cá nhân";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card mt-5">
                <div class="card-header">
                    <h2 class="text-center">@ViewData["Title"]</h2>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-4 fw-bold">Họ tên:</div>
                        <div class="col-md-8">@Model.FirstName @Model.LastName</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-4 fw-bold">Email:</div>
                        <div class="col-md-8">@Model.Email</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-4 fw-bold">Số điện thoại:</div>
                        <div class="col-md-8">@Model.PhoneNumber</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-4 fw-bold">Ngày tạo tài khoản:</div>
                        <div class="col-md-8">@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-4 fw-bold">Vai trò:</div>
                        <div class="col-md-8">
                            @string.Join(", ", Model.Roles)
                        </div>
                    </div>
                </div>
                <div class="card-footer text-center">
                    <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Quay về trang chủ</a>
                </div>
            </div>
        </div>
    </div>
</div> 